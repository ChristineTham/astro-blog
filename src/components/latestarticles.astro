---
import type { CollectionEntry } from 'astro:content'
import { Image } from 'astro:assets'
import Categories from '../components/categories.astro'
import { DefaultImage } from '../config'

export interface Props {
  posts: CollectionEntry<'blog'>[]
}

const { posts } = Astro.props

const newestPost = posts[0]
const otherPosts = posts.slice(1, 5)
---

<div class='bg-white dark:bg-gray-900'>
  <div class='mx-auto px-4 max-w-7xl lg:px-8 sm:px-6'>
    <div class='mx-auto py-8 max-w-2xl lg:py-16 sm:py-12 lg:max-w-none'>
      <div class='flex flex-row items-center'>
        <h2 class='text-2xl text-purple-800 font-extrabold md:text-4xl dark:text-purple-200'>
          Our Latest Articles
        </h2>
        <a
          href={`${import.meta.env.BASE_URL}` + 'blog'}
          class='text-base text-white font-bold ml-4 mt-2 px-2 py-2 rounded-md bg-purple-600 inline-block md:text-lg dark:text-black md:px-6 md:py-3 dark:bg-purple-300 hover:bg-pink-600 dark:hover:bg-pink-300'
        >
          All Articles
        </a>
        <a
          href={`${import.meta.env.BASE_URL}` + 'categories'}
          class='text-base text-purple-800 font-bold ml-4 mt-2 px-2 py-2 rounded-md bg-purple-100 inline-block md:text-lg dark:text-purple-100 md:px-6 md:py-3 dark:bg-purple-900 hover:bg-pink-200 dark:hover:bg-pink-900'
        >
          Categories
        </a>
        <a
          href={`${import.meta.env.BASE_URL}` + 'tags'}
          class='text-base text-purple-800 font-bold ml-4 mt-2 px-2 py-2 rounded-md bg-purple-100 inline-block md:text-lg dark:text-purple-100 md:px-6 md:py-3 dark:bg-purple-900 hover:bg-pink-200 dark:hover:bg-pink-900'
        >
          Tags
        </a>
      </div>
      <div class='mt-6 space-y-12 lg:gap-x-6 lg:grid lg:grid-cols-2 xl:grid-cols-3 lg:space-y-0'>
        <div class='mb-4 p-4 rounded block relative lg:mb-0 lg:p-0 xl:col-span-2'>
          <a href={`${import.meta.env.BASE_URL}` + 'blog/' + newestPost.id}>
            <span class='sr-only'>{newestPost.data.title}</span>
            <Image
              src={newestPost.data.image || DefaultImage}
              alt={newestPost.data.title + ' featured image'}
              class='rounded-md bg-purple-100 h-64 w-full object-cover dark:bg-purple-800 md:h-80'
              loading='lazy'
            />
          </a>
          <div class='mt-4'>
            {newestPost.data.categories && <Categories categories={newestPost.data.categories} />}
          </div>
          <a href={`${import.meta.env.BASE_URL}` + 'blog/' + newestPost.id}>
            <h1
              class='text-4xl text-purple-600 leading-tight font-bold mt-2 dark:text-purple-300 hover:text-pink-600 dark:hover:text-pink-300'
            >
              {newestPost.data.title}
            </h1>
          </a>
          {
            newestPost.data.pubDate && (
              <p class='text-gray-600 mb-4 dark:text-gray-400'>
                {newestPost.data.pubDate.toDateString()}
              </p>
            )
          }
          <p class='text-gray-600 mb-4 dark:text-gray-400'>
            {newestPost.data.description}
          </p>
          <a
            href={`${import.meta.env.BASE_URL}` + 'blog/' + newestPost.id}
            class='text-white mt-2 px-6 py-3 rounded-md bg-purple-600 inline-block dark:text-black dark:bg-purple-300 hover:bg-pink-600 dark:hover:bg-pink-300'
          >
            Read more
            <span class='sr-only'>{newestPost.data.title}</span>
          </a>
        </div>
        <div class='w-full'>
          {
            otherPosts.map((post) => (
              <div class='mb-10 rounded w-full md:grid md:grid-cols-3'>
                <a href={new URL(`${import.meta.env.BASE_URL}` + 'blog/' + post.id, Astro.url)}>
                  <Image
                    src={post.data.image || DefaultImage}
                    alt={post.data.title + ' featured image'}
                    class='p-4 rounded-md bg-purple-100 h-64 w-full block object-cover md:p-0 dark:bg-purple-800 md:h-32 lg:block'
                    loading='lazy'
                  />
                </a>
                <div class='px-4 rounded bg-white dark:bg-gray-800 md:col-span-2'>
                  {post.data.categories && <Categories categories={post.data.categories} />}
                  <a href={`${import.meta.env.BASE_URL}` + 'blog/' + post.id}>
                    <div class='text-xl text-gray-800 font-semibold dark:text-gray-100 md:mt-1'>
                      {post.data.title}
                    </div>
                  </a>
                  {post.data.pubDate && (
                    <p class='text-sm text-gray-600 block dark:text-gray-300'>
                      {post.data.pubDate.toDateString()}
                    </p>
                  )}
                  <p class='text-sm text-gray-600 block dark:text-gray-300 md:hidden'>
                    {post.data.description}
                  </p>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</div>
