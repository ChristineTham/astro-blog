---
import { COMMUNITY_INVITE_URL } from '../config'

type Props = {
  editHref: string
}

const { editHref } = Astro.props as Props
const showMoreSection = COMMUNITY_INVITE_URL
---

{
  showMoreSection && (
    <>
      <h2
        id='more-title'
        class='font-display mt-4 text-sm text-gray-900 font-medium space-y-3 dark:text-white'
      >
        More
      </h2>
      <ol role='list' class='mt-4 flex flex-col text-sm space-y-3'>
        {editHref && (
          <li class='flex items-center py-1 text-gray-500 dark:text-gray-400'>
            <div class='i-heroicons-pencil mr-2 h-6 w-6' />
            <a
              class='hover:text-purple-600 dark:hover:text-purple-300'
              href={editHref}
              target='_blank'
            >
              <span>Edit this page</span>
            </a>
          </li>
        )}
        {COMMUNITY_INVITE_URL && (
          <li class='flex items-center py-1 text-gray-500 dark:text-gray-400'>
            <div class='i-heroicons-chat-bubble-bottom-center-text mr-2 h-6 w-6' />
            <a
              class='hover:text-purple-600 dark:hover:text-purple-300'
              href={COMMUNITY_INVITE_URL}
              target='_blank'
            >
              <span>Join our community</span>
            </a>
          </li>
        )}
      </ol>
    </>
  )
}
