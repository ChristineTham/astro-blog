---
import type { Frontmatter } from '../config'
import Base from '../layouts/base.astro'
import PageHero from '../components/pagehero.astro'
import { DefaultImage } from '../config'

export interface Props {
  frontmatter: {
    layout: string
    title: string
    description: string
    pubDate: string
    image: string
  }
}

const { frontmatter } = Astro.props

const images = import.meta.glob<ImageMetadata>('../assets/**/*', {
  import: 'default'
})
const image = (await images[frontmatter.image]()) || DefaultImage

const fm: Frontmatter = {
  title: frontmatter.title,
  description: frontmatter.description,
  pubDate: new Date(frontmatter.pubDate),
  image: image
}
---

<Base frontmatter={fm}>
  <main class='dark:bg-gray-900'>
    <article class='post'>
      <header>
        <PageHero
          title={frontmatter.title}
          description={frontmatter.description}
          {image}
        />
      </header>
      <section
        class='lg:prose-xl mx-auto my-8 max-w-screen-lg px-4 prose prose-purple lg:px-0 dark:prose-invert'
      >
        <slot />
      </section>
    </article>
  </main>
</Base>
