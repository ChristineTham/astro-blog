---
import type { Frontmatter } from '../config'
import { SiteMetadata } from '../config'
import Base from '../layouts/base.astro'
import PageHero from '../components/pagehero.astro'
import image from '../assets/images/Play With Lines.jpg'

const frontmatter: Frontmatter = {
  title: '404: Not found',
  description: "You just hit a route that doesn't exist... the sadness.",
  image: image,
  pubDate: SiteMetadata.buildTime
}
---

<Base frontmatter={frontmatter}>
  <header>
    <PageHero title={frontmatter.title!} description={frontmatter.description} {image} />
  </header>
</Base>
